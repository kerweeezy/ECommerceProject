<h2><%= @team.name %></h2>

<% @team.jerseys.each do |jersey| %>
   <div class="row">
      <div class="col-sm">
        <%= link_to (image_tag url_for(jersey.image)), jersey, class: 'img-thumbnail' %>
        <%= link_to jersey.name, jersey, class: 'btn btn-link' %>
        <%= number_to_currency jersey.price %>
        <button type="button" class="btn btn-info">Add to Cart</button>
      </div>
    </div>
<% end %>