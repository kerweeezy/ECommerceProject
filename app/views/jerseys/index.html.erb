<% @jerseys.each do |jersey| %>
  <div>
    <%= image_tag url_for(jersey.image), class: 'img-thumbnail' if jersey.image.present? %>
    <div>
      <%= link_to jersey.name, jersey, class: 'btn btn-link' %>
      <%= jersey.price %>
      <button type="button" class="btn btn-info">Add to Cart</button>
    </div>
  </div>
<% end %>

